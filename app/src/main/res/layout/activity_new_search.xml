<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.twins.sundus.osama.khodnyma3k.Activity.NewSearchActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/edPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_search_black_24dp"
        android:drawableTint="@color/ic_color"
        android:hint="@string/main_search"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize" />
    <!--<fragment-->
    <!--android:id="@+id/place_autocomplete_fragment"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"-->
    <!--/>-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_place_black_24dp" />

    <Button
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:text="Done"
        android:textColor="@color/white"
        android:textSize="@dimen/titel" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edPlace"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        app:backgroundTint="@color/white"
        app:fabSize="mini"
        app:elevation="5dp"
        android:background="@color/white"
        app:rippleColor="@color/white"
        app:srcCompat="@drawable/ic_my_location_black_24dp" />

</RelativeLayout>
