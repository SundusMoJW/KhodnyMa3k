<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:scrollbars="none"
    android:paddingBottom="5dp"
    tools:context="com.twins.sundus.osama.khodnyma3k.Activity.RequestActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp">
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:text="9:30 am"
        android:textDirection="ltr"
        android:textSize="@dimen/titel"
         />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:text="17/11/2012"
        android:textColor="@color/colorAccent"
        android:textDirection="ltr"
        android:textSize="@dimen/titel" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/time"
        android:background="@color/colorAccent" />

    <ImageView
        android:id="@+id/red_ellipse"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@id/view1"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/ic_red_ellipse" />

    <View
        android:id="@+id/verticalView"
        android:layout_width="0.5dp"
        android:layout_height="40dp"
        android:layout_below="@id/red_ellipse"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/colorAccent" />

    <ImageView
        android:id="@+id/green_ellipse"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@id/verticalView"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        app:srcCompat="@drawable/ic_green_ellipse" />

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/red_ellipse"
        android:text="من الرياض"
        android:textColor="@color/black"
        android:textSize="@dimen/titel"
         />

    <TextView
        android:id="@+id/fromAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/from"
        android:layout_toEndOf="@id/red_ellipse"
        android:text="الرياض - الرياض"
        android:textColor="@color/ic_color"
        android:textSize="@dimen/textSize"
        />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fromAddress"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/green_ellipse"
        android:text="إلى الرياض"
        android:textColor="@color/black"
        android:textSize="@dimen/titel"
         />

    <TextView
        android:id="@+id/toAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/to"
        android:layout_toEndOf="@id/green_ellipse"
        android:text="الرياض - الرياض"
        android:textColor="@color/ic_color"
        android:textSize="@dimen/textSize"
       />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/toAddress"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_bi_direction" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_one_direction" />

        <TextView
            android:id="@+id/direction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="اتجاهين"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="مرة واحدة كل أسبوع"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ll1"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view3"
        android:padding="5dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/capacity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="3 أشخاص"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="5 ريال لكل شخص"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ll2"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view4"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="وصف الرحلة"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/description"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view5"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/smoke"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_smoking"/>

        <ImageView
            android:id="@+id/music"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_songs"/>

        <ImageView
            android:id="@+id/condition"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_conditioning"/>
    </LinearLayout>
    <Button
        android:id="@+id/request"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll3"
        android:layout_margin="20dp"
        android:background="@color/black"
        android:text="@string/bu_requet"
        android:textColor="@color/white"
        android:textSize="@dimen/titel" />
   </RelativeLayout>
</ScrollView>